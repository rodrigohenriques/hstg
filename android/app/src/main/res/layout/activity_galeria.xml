<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.brosource.hstgbrasil.gui.GalleryActivity">

    <RelativeLayout
        android:id="@+id/main_header"
        style="@style/ImageViewSize"
        android:layout_width="match_parent"
        android:background="@color/preto"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            style="@style/ImageViewMinSize"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/back_button"
            android:padding="20dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_back" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hstg_header"
        style="@style/ImageViewMediumSize"
        android:layout_width="match_parent"
        android:layout_below="@+id/main_header"
        android:background="@color/rosa">

        <ImageView
            android:id="@+id/img_icon"
            style="@style/ImageViewSize"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_hstg" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/galeria_black"
        style="@style/ImageViewLowSize"
        android:layout_width="match_parent"
        android:layout_below="@+id/hstg_header"
        android:background="@color/preto">

        <TextView
            android:id="@+id/textview_gallery_subheader"
            style="@style/TextViewLowSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:textColor="@color/rosa" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/galeria_footer"
        android:layout_below="@id/galeria_black">

        <GridView
            android:id="@+id/gridview_gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:orientation="vertical"
            android:padding="2dp"
            android:stretchMode="columnWidth" />

        <TextView
            android:id="@+id/textview_no_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message_no_items"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="invisible"/>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/galeria_footer"
        style="@style/ImageViewSize"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/preto">

        <TextView
            android:id="@+id/button_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="16dp"
            android:gravity="right"
            android:text="@string/topo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/branco" />

    </LinearLayout>

</RelativeLayout>
