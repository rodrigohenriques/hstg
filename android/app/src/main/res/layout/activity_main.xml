<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.brosource.hstgbrasil.gui.MainActivity">

    <RelativeLayout
        android:id="@+id/main_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fake_action_bar_height"
        android:background="@color/preto"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="0dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_hstg_topo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@color/branco"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Ao Vivo"
            android:textColor="@drawable/text_button_preto"
            android:textSize="14sp"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_topbar"
        android:background="@color/preto"
        android:padding="10dp">

        <br.com.brosource.hstgbrasil.widgets.ImageViewCircle
            android:id="@+id/main_profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/main_text_saudacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/main_profile_pic"
            android:layout_alignTop="@+id/main_profile_pic"
            android:layout_toRightOf="@+id/main_profile_pic"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingLeft="16dp"
            android:text="OlÃ¡, "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/branco"
            android:textSize="@dimen/txt_saudacao_size" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_header"
        android:background="@color/preto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/branco">

            <TextView
                android:id="@+id/main_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/main_espaco_itens"
                android:background="@color/amarelo"
                android:clickable="true"
                android:padding="16dp"
                android:text="@string/news"
                android:textColor="@drawable/text_button_preto"
                android:textSize="@dimen/menu_font_size" />

            <TextView
                android:id="@+id/main_agenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_news"
                android:layout_marginTop="@dimen/main_espaco_itens"
                android:background="@color/azul"
                android:clickable="true"
                android:padding="12dp"
                android:text="@string/agenda"
                android:textColor="@drawable/text_button_preto"
                android:textSize="@dimen/menu_font_size" />

            <TextView
                android:id="@+id/main_galeria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_agenda"
                android:layout_marginTop="@dimen/main_espaco_itens"
                android:background="@color/rosa"
                android:clickable="true"
                android:padding="16dp"
                android:text="@string/galeria"
                android:textColor="@drawable/text_button_preto"
                android:textSize="@dimen/menu_font_size" />


            <TextView
                android:id="@+id/main_produtos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_galeria"
                android:layout_marginTop="@dimen/main_espaco_itens"
                android:background="@color/verde"
                android:clickable="true"
                android:padding="16dp"
                android:text="@string/produto"
                android:textColor="@drawable/text_button_preto"
                android:textSize="@dimen/menu_font_size" />

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/main_footer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/main_scroll"
        android:layout_marginTop="@dimen/main_espaco_itens"
        android:orientation="horizontal"
        android:weightSum="2">

        <FrameLayout
            android:id="@+id/content_meus_dados"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cinza">

            <TextView
                android:id="@+id/main_meus_dados"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preto"
                android:clickable="true"
                android:gravity="center"
                android:minLines="2"
                android:text="Meus\nDados"
                android:textColor="@drawable/text_button_branco"
                android:textSize="@dimen/menu_font_size" />

            <ImageView
                android:layout_width="135dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:background="@drawable/soon_sombra" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/content_wifi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cinza">

            <TextView
                android:id="@+id/main_wifi_party"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:gravity="center"
                android:text="WiFi\nParty"
                android:textColor="@drawable/text_button_branco"
                android:textSize="@dimen/menu_font_size" />

            <ImageView
                android:layout_width="135dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:background="@drawable/soon_preto" />
        </FrameLayout>


    </LinearLayout>

</RelativeLayout>
