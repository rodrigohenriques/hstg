<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.brosource.hstgbrasil.gui.MainActivity">

    <RelativeLayout
        android:id="@+id/main_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fake_action_bar_height"
        android:background="@color/preto"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imageView"
            style="@style/ImageViewBigSize"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="0dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_hstg_topo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@color/branco"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Ao Vivo"
            android:textColor="@drawable/text_button_preto"
            android:textSize="14sp"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_topbar"
        android:background="@color/preto"
        android:padding="10dp">

        <br.com.brosource.hstgbrasil.widgets.ImageViewCircle
            android:id="@+id/main_profile_pic"
            android:layout_width="?android:attr/listPreferredItemHeightLarge"
            android:layout_height="?android:attr/listPreferredItemHeightLarge" />

        <TextView
            android:id="@+id/main_text_saudacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/main_profile_pic"
            android:layout_alignTop="@+id/main_profile_pic"
            android:layout_toRightOf="@+id/main_profile_pic"
            android:ellipsize="marquee"
            style="@style/TextViewBigSize"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingLeft="16dp"
            android:text="OlÃ¡, "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/branco" />

    </RelativeLayout>

    <ListView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/main_header"
        android:id="@+id/main_list"
        android:divider="@color/branco"
        android:dividerHeight="5dp"
        android:layout_above="@+id/main_footer"
        style="@style/listMain"
        android:layout_width="match_parent"></ListView>

    <LinearLayout
        android:id="@+id/main_footer"
        style="@style/ImageViewBigSize"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <FrameLayout
            android:layout_weight="1"
            android:id="@+id/content_meus_dados"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/cinza">

            <TextView
                android:id="@+id/main_meus_dados"
                style="@style/TextViewBigSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preto"
                android:clickable="true"
                android:gravity="center"
                android:minLines="2"
                android:text="Meus\nDados" />

            <ImageView
                android:layout_width="135dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:background="@drawable/soon_sombra" />
        </FrameLayout>

        <FrameLayout
            android:layout_weight="1"
            android:id="@+id/content_wifi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/cinza">

            <TextView
                android:id="@+id/main_wifi_party"
                style="@style/TextViewBigSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:gravity="center"
                android:text="WiFi\nParty"
                android:textColor="@drawable/text_button_branco" />

            <ImageView
                android:layout_width="135dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:background="@drawable/soon_preto" />
        </FrameLayout>


    </LinearLayout>

</RelativeLayout>
