<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.brosource.hstgbrasil.gui.MainActivity">

    <RelativeLayout
        android:id="@+id/main_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fake_action_bar_height"
        android:background="@color/preto"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="0dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_hstg_topo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="@drawable/text_button_preto"
            android:text="Ao Vivo"
            android:background="@color/branco"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:visibility="gone"
            android:padding="8dp"
            android:clickable="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/preto"
        android:padding="10dp"
        android:layout_below="@+id/main_topbar">

        <br.com.brosource.hstgbrasil.widgets.ImageViewCircle
            android:id="@+id/main_profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/main_text_saudacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="marquee"
            android:paddingLeft="16dp"
            android:text="OlÃ¡, "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/branco"
            android:textSize="@dimen/txt_saudacao_size"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/main_profile_pic"
            android:layout_alignBottom="@+id/main_profile_pic"
            android:layout_toRightOf="@+id/main_profile_pic" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_header"
        android:background="@color/preto"
        android:id="@+id/main_scroll">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/branco">

            <TextView
                android:id="@+id/main_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/amarelo"
                android:padding="16dp"
                android:layout_marginTop="@dimen/main_espaco_itens"
                android:textSize="@dimen/menu_font_size"
                android:layout_alignParentTop="true"
                android:text="#NEWS"
                android:clickable="true"
                android:textColor="@drawable/text_button_preto" />

            <TextView
                android:id="@+id/main_agenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/azul"
                android:padding="12dp"
                android:layout_marginTop="@dimen/main_espaco_itens"
                android:textSize="@dimen/menu_font_size"
                android:text="#AGENDA"
                android:clickable="true"
                android:textColor="@drawable/text_button_preto"
                android:layout_below="@+id/main_news" />

            <FrameLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/content_galeria"
                android:layout_below="@+id/main_agenda"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/main_galeria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/rosa"
                    android:padding="16dp"
                    android:layout_marginTop="@dimen/main_espaco_itens"
                    android:textSize="@dimen/menu_font_size"
                    android:text="#GALERIA"
                    android:clickable="false"
                    android:textColor="@drawable/text_button_preto" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center|right"
                    android:layout_height="40dp"
                    android:background="@drawable/soon_branco"/>
            </FrameLayout>


            <TextView
                android:id="@+id/main_produtos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/verde"
                android:padding="16dp"
                android:layout_marginTop="@dimen/main_espaco_itens"
                android:textSize="@dimen/menu_font_size"
                android:text="#PRODUTOS"
                android:clickable="true"
                android:textColor="@drawable/text_button_preto"
                android:layout_below="@+id/content_galeria"
                />

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/main_footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="120dp"
        android:layout_below="@+id/main_scroll"
        android:layout_marginTop="@dimen/main_espaco_itens"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_meus_dados"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/preto"
            android:gravity="center"
            android:minLines="2"
            android:textSize="@dimen/menu_font_size"
            android:clickable="true"
            android:textColor="@drawable/text_button_branco"
            android:text="Meus\nDados" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/content_wifi"
            android:background="@color/cinza"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/main_wifi_party"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/menu_font_size"
                android:clickable="false"
                android:textColor="@drawable/text_button_branco"
                android:text="WiFi\nParty" />

            <ImageView
                android:layout_width="135dp"
                android:layout_gravity="center"
                android:layout_height="54dp"
                android:background="@drawable/soon_preto"/>
        </FrameLayout>


    </LinearLayout>

</RelativeLayout>
