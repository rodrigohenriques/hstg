<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ImageViewBigSize"
    android:layout_width="match_parent"
    android:layout_marginBottom="2.5dp"
    android:layout_marginTop="2.5dp"
    android:background="@color/branco"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_img_news"
        style="@style/ImageViewBigSize"
        android:background="@drawable/ic_news_default"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:background="@color/cinza"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_txt_titulo_news"
                style="@style/TextViewLowSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Titulo da Noticia"
                android:textAllCaps="true"
                android:textColor="@color/preto" />

            <TextView
                android:id="@+id/item_txt_descricao_news"
                style="@style/TextViewMinimumSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/item_txt_titulo_news"
                android:layout_marginTop="10dp"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:maxWidth="200dp"
                android:minLines="3"
                android:text="Descrição breve da notícia."
                android:textColor="@color/preto" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>