<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="${relativePackage}.${activityClass}">

    <FrameLayout
        android:id="@+id/vg_cover"
        style="@style/ImageViewBiggerSize"
        android:layout_centerHorizontal="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                style="@style/ImageViewBigSize2"
                android:layout_marginTop="10dp"
                android:background="@color/verde"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_produto"
                    style="@style/ImageViewBigSize"
                    android:background="@drawable/ic_facebook"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

            </LinearLayout>


            <TextView
                android:id="@+id/txt_nome_produto"
                style="@style/TextViewLowerSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:singleLine="true"
                android:text="NOME DO PRODUTO"
                android:textAllCaps="true"
                android:textColor="@color/preto"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_desc_produto"
                style="@style/TextViewMinimumSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="2"
                android:minLines="2"
                android:text="Descrição Produto"
                android:textColor="@color/preto"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_preco"
                style="@style/TextViewLowerSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="center"
                android:singleLine="true"
                android:text="R$ 50"
                android:textColor="@color/preto"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>